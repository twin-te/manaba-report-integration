{
  "name": "Manaba Report Integration by Twin:te",
  "version": "1.2.1",
  "manifest_version": 3,
  "description": "Manabaのレポート提出状況を外部サービスに同期します",
  "permissions": [
    "identity",
    "activeTab",
    "storage",
    "declarativeContent"
  ],
  "host_permissions": [
    "https://github.com/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "64": "icons/64.png",
      "128": "icons/128.png",
      "512": "icons/512.png"
    }
  },
  "options_page": "options.html",
  "oauth2": {
    "client_id": "replace by webpack",
    "scopes": ["replace by webpack"]
  },
  "content_scripts": [
    {
      "matches": ["https://manaba.tsukuba.ac.jp/ct/*"],
      "js": ["manaba_main.js", "manaba_main_ui.js"]
    },
    {
      "matches": [
        "https://manaba.tsukuba.ac.jp/ct/course_*_report_*",
        "https://manaba.tsukuba.ac.jp/ct/course_*_survey_*",
        "https://manaba.tsukuba.ac.jp/ct/course_*_query_*"
      ],
      "js": ["manaba_commit.js"]
    }
  ],
  "content_security_policy":{
    "extension_pages": "script-src 'self' ; object-src 'self'"
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  }
}
